<resources>

    <!--
    Steps to using Toolbar
    1) In styles.xml, parent=Theme.AppCompat.NoActionBar
    2) In layout, use <android.support.v7.widget.Toolbar android:minHeight="?attr/actionBarSize"><LinearLayout ...>
    3) In Java Activity, setSupportActionBar(findViewById(R.id.toolbar))
    -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
